	at scala.tools.nsc.typechecker.Typers$Typer.scala$tools$nsc$typechecker$Typers$Typer$$makeAccessible(Typers.scala:598)
	at scala.tools.nsc.typechecker.Typers$Typer.typedIdent$1(Typers.scala:5031)
